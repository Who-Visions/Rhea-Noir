[MESSAGES CONTROL]
disable=
    C0114, # missing-module-docstring (handled by auto script mostly, but safe to ignore if stuck)
    C0115, # missing-class-docstring
    C0116, # missing-function-docstring
    R0902, # too-many-instance-attributes
    R0903, # too-few-public-methods
    R0913, # too-many-arguments
    R0914, # too-many-locals
    R0915, # too-many-statements
    W0613, # unused-argument (common in abstract methods/handlers)
    W0707, # raise-missing-from
    C0301, # line-too-long
    R1705, # no-else-return
    R0917, # too-many-positional-arguments
    R0801, # duplicate-code
    C0103, # invalid-name
    C0415, # import-outside-toplevel
    W0718, # broad-exception-caught (design choice for error handling)
    E0401, # import-error (optional dependencies handled via try-except)
    W0622, # redefined-builtin (backwards compatible API parameter names like 'format')
    C0411, # wrong-import-order (flexibility for try-except import patterns)
    W0130, # duplicate-value (minor in large sets)
    W0611, # unused-import (some imports needed for type hints)
    E0602, # undefined-variable (caused by try-except import patterns)
    C0413, # wrong-import-position (flexibility with sys.path modifications)
    W0612, # unused-variable (intentional in some patterns)
    W1309, # f-string-without-interpolation (intentional for consistency)

[REPORTS]
score=yes
